model Location {
  id         Int      @id @default(autoincrement())
  name       String
  buildingNo String
  street     String
  city       String
  state      String
  zip        String
  events     Event[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
